<component type="desktop-application">
  <id>io.github.serverket.cpugov</id>

  <name>CPU Governor</name>
  <developer_name>Manuel "Serverket" Hernandez</developer_name>
  <summary>Control your CPU frequency scaling governor</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <developer id="io.github.serverket.cpugov">
    <name>Manuel "Serverket" Hernandez and Contributors</name>
  </developer>

  <description>
    <p>
      CPU Governor is a clean, modern utility for managing your Linux CPU
      frequency scaling governor. Switch between performance and powersave
      modes with a single click, and monitor real-time CPU frequencies
      across all cores.
    </p>
    <p>
      <em>Note: This application requires the 'cpugov-daemon' system service to be installed on your host system to function. Please see the project website for installation instructions.</em>
    </p>
    <p>Features:</p>
    <ul>
      <li>Toggle between available CPU governors instantly</li>
      <li>Real-time per-core frequency monitoring</li>
      <li>Polkit integration for secure privilege management</li>
      <li>Modern libadwaita interface with adaptive layout</li>
      <li>Dark and light theme support</li>
    </ul>
  </description>

  <launchable type="desktop-id">io.github.serverket.cpugov.desktop</launchable>

  <branding>
    <color type="primary" scheme_preference="light">#62a0ea</color>
    <color type="primary" scheme_preference="dark">#1a5fb4</color>
  </branding>

  <url type="homepage">https://github.com/Serverket/cpugov</url>
  <url type="bugtracker">https://github.com/Serverket/cpugov/issues</url>
  <url type="vcs-browser">https://github.com/Serverket/cpugov</url>

  <content_rating type="oars-1.1" />

  <recommends>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </recommends>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <categories>
    <category>System</category>
    <category>Monitor</category>
    <category>Settings</category>
  </categories>

  <keywords>
    <keyword>CPU</keyword>
    <keyword>governor</keyword>
    <keyword>frequency</keyword>
    <keyword>performance</keyword>
    <keyword>powersave</keyword>
    <keyword>scaling</keyword>
  </keywords>

  <releases>
