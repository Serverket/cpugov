#!/bin/sh
# postrm script for cpugov
# See: dh_installdeb(1)

set -e

case "$1" in
    purge)
        # Only remove user configuration on purge
        echo "Purging configuration files for cpugov..."
        rm -rf /var/lib/cpugov
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Do NOT remove /var/lib/cpugov on normal remove or upgrade
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
